<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity"
    android:orientation="horizontal">


    <TableLayout
        android:id="@+id/linear"
        android:layout_width="350dp"
        android:layout_height="350dp"
        >

        <TableRow
            android:id="@+id/one"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/two"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/three"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/four"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/five"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/six"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/seven"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/eight"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/nine"
            android:layout_width="350dp"
            android:layout_height="350dp" />

        <TableRow
            android:id="@+id/ten"
            android:layout_width="350dp"
            android:layout_height="350dp" />
    </TableLayout>


    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ship_group">
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginRight="100dp"
            android:text="Четырехпалубный"
            android:id="@+id/four_ship"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginRight="100dp"
            android:text="Трехпалубный"
            android:id="@+id/three_ship"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginRight="100dp"
            android:text="Двухпалубный"
            android:id="@+id/two_ship"
            >
        </RadioButton>
        <RadioButton
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginRight="100dp"
            android:text="Однопалубный"
           android:id="@+id/one_ship"
            >
        </RadioButton>
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="Поворот"
            android:id="@+id/povorot"
            android:layout_margin="10dp">

        </androidx.appcompat.widget.SwitchCompat>

    </RadioGroup>
    <View
        android:id="@+id/vieww"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/black">

    </View>


</LinearLayout>